<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueappcolorthemelight"
    tools:context=".LogInActivity">

    <TextView
        android:id="@+id/passwordloginerror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="#EA1010"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/passwordloginfield"
        app:layout_constraintTop_toBottomOf="@+id/passwordloginfield" />

    <TextView
        android:id="@+id/usernameloginerror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="#EA1010"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/usernamelogingield"
        app:layout_constraintTop_toBottomOf="@+id/usernamelogingield" />

    <TextView
        android:id="@+id/orsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="67dp"
        android:text="Or sign up..."
        android:textColor="#2196F3"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/loginbutt"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/loginbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/blueappcolorthemedark"
        android:onClick="logIn"
        android:text="Log in"
        android:textColor="@color/appcolorlightv2.1"
        android:textColorHighlight="@color/blueappcolorthemedark"
        android:textColorHint="@color/blueappcolorthemedark"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/orsignup"
        app:layout_constraintTop_toBottomOf="@+id/signinhelp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="Log in:"
        android:textColor="@color/appcolorlightv2.1"
        android:textColorHighlight="@color/appcolorlightv2.1"
        android:textColorHint="@color/appcolorlightv2.1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="318dp"
        android:layout_height="192dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/groopronlyheadingandmottov21nobg" />

    <EditText
        android:id="@+id/usernamelogingield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your username..."
        android:inputType="textPersonName"
        android:textColor="@color/appcolorlightv2.1"
        android:textColorHighlight="@color/appcolorlightv2.1"
        android:textColorHint="#BFDBE0E6"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <EditText
        android:id="@+id/passwordloginfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Enter your password..."
        android:inputType="textPassword"
        android:textColor="@color/appcolorlightv2.1"
        android:textColorHighlight="@color/appcolorlightv2.1"
        android:textColorHint="#BFDBE0E6"
        app:layout_constraintStart_toStartOf="@+id/usernamelogingield"
        app:layout_constraintTop_toBottomOf="@+id/usernameloginerror" />

    <TextView
        android:id="@+id/signinhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Need help signing in..?"
        android:textColor="#2196F3"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/passwordloginfield"
        app:layout_constraintTop_toBottomOf="@+id/passwordloginerror" />

</androidx.constraintlayout.widget.ConstraintLayout>