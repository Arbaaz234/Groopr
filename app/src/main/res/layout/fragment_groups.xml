<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueappcolorthemelight"
    tools:context=".ui.groups.GroupsFragment">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginTop="224dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="No groups! Click here to add one:"
        android:textAlignment="center"
        android:textColor="@color/appcolorlightv2.1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/addgroupbutton"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/baloo_bhaina"
        android:gravity="center_horizontal"
        android:text="Your Groups"
        android:textColor="@color/appcolorlightv2.1"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/addgroupbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addgroupbutton"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="471dp"
        android:src="@drawable/add_group_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <GridView
        android:id="@+id/mainGridView1"
        android:layout_width="415dp"
        android:layout_height="455dp"
        android:columnWidth="130dp"
        android:gravity="center"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

    </GridView>


</androidx.constraintlayout.widget.ConstraintLayout>